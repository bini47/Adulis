<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:id="@+id/nested_content"
    android:background="@android:color/white"
    android:scrollbars="vertical"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollingCache="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SingleProduct"
    tools:showIn="@layout/activity_single_product"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250.0dip"
            android:layout_weight="1.0">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"

                android:background="@color/grey_40"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:layout_constraintHorizontal_bias="0.0"

                app:layout_constraintVertical_bias="0.0"/>


        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/spacing_middle"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrice"
                    android:id="@id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />
                <TextView android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/grey_60"
                    android:id="@+id/price_strike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small" />
            </LinearLayout>
            <View android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:textColor="@color/colorPrice"
                android:id="@+id/stoke_status"
                android:text="Stoke"
                android:background="@color/grey_10"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_middle"
                android:paddingBottom="@dimen/spacing_medium"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:paddingBottom="@dimen/spacing_middle"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@id/imageView"
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:src="@drawable/ic_date"
                android:tint="@color/grey_40" />
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_40"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:text="-" />
        </LinearLayout>
        <View android:background="@color/grey_5"
            android:layout_width="fill_parent"
            android:layout_height="2.0px" />
        <RelativeLayout android:paddingTop="@dimen/spacing_middle"
            android:paddingBottom="@dimen/spacing_large"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"

                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="17dp"
                android:text="@string/dummy" />
        </RelativeLayout>
        <View android:background="@color/grey_5"
            android:layout_width="fill_parent"
            android:layout_height="2.0px" />

        <View android:background="@color/grey_5"
            android:layout_width="fill_parent"
            android:layout_height="2.0px" />
        <LinearLayout android:orientation="vertical"
            android:padding="@dimen/spacing_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/grey_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_middle"
                android:text="@string/categories_product" />
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey_80"
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>